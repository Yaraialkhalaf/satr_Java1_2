import java.util.Scanner;
public class App {
    public static void main(String[] args) {
System.out.println("Hello Welcome To The BMI Calculator");
System.out.println("Please Enter Your Height in meters :");
Scanner Height = new Scanner(System.in);
double x = Height.nextDouble(); 

System.out.println("Please Enter Your Weight in KG :");
Scanner Weight = new Scanner(System.in);
double y = Weight.nextDouble(); 
x = x*x;
double BMI = y/x;

System.out.print("Your BMI Is " + BMI + " and that means you are ");

if (BMI <= 18.5){
System.out.print("Underweight");
}

else if (BMI <= 24.9){
System.out.print("Healthy Weight");
}


else if (BMI <= 29.9){
System.out.print("Overweight");
}


else if (BMI <= 34.9){
System.out.print("Class 1 Obesity");
}

else if (BMI <= 39.9){
System.out.print("Class 2 Obesity");
}

else if (BMI >= 40.0) {
System.out.print("Class 3 Obesity");
}


}
}
